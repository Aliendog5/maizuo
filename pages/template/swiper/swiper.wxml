<template name="banner-swiper">
    <swiper class="swiper"
        circular='true'
        indicator-dots="true"
        autoplay="true" 
        interval="2000" 
        duration="500">
        <block wx:for="{{imgUrls}}" wx:key="{{index}}">
            <swiper-item>
                <image src="{{item}}" class="slide-image"/>
            </swiper-item>
        </block>
    </swiper>
</template>